<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/marble"
    tools:context=".Main_forgotten">

    <ImageView
        android:id="@+id/id_logo1"
        android:layout_width="196dp"
        android:layout_height="192dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_login"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="367dp"
        android:layout_height="59dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="@string/texto1"
        android:textColor="@color/bark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_logo1" />

    <EditText
        android:id="@+id/et_mail"
        android:layout_width="311dp"
        android:layout_height="58dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/bark"
        android:textColorHint="@color/grey"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_recuperar"
        android:layout_width="264dp"
        android:layout_height="72dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/texto3"
        android:textColor="@color/marble"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_mail" />

</androidx.constraintlayout.widget.ConstraintLayout>