<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonStyle">
        <item name="android:layout_width">188dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">28dp</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/marble</item>
        <item name="android:textSize">20sp</item>
        <item name="android:radius">70dp</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Disable the window's action bar -->
        <item name="windowActionBar">true</item>
        <!-- Other theme attributes -->
    </style>
    
    <style name="AppTheme.TemaPopup">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#7D5642</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FEEBDD</item>
        <item name="android:textColorSecondary">#757575</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/brownstone</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/libromain3</item>
    </style>


</resources>